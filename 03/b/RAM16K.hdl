/**
 * Memory of 16K registers, each 16 bit-wide. Out holds the value
 * stored at the memory location specified by address. If load==1, then
 * the in value is loaded into the memory location specified by address
 * (the loaded value will be emitted to out from the next time step onward).
 */

CHIP RAM16K {
    IN in[16], load, address[14];
    OUT out[16];

    PARTS:
    DMux8Way(
        in=load,
        sel=address[11..13],
        a=loadMem000,
        b=loadMem001,
        c=loadMem010,
        d=loadMem011,
        e=loadMem100,
        f=loadMem101,
        g=loadMem110,
        h=loadMem111);

    RAM4K(in=in, load=loadMem000, address=address[0..10], out=mem000out);
    RAM4K(in=in, load=loadMem001, address=address[0..10], out=mem001out);
    RAM4K(in=in, load=loadMem010, address=address[0..10], out=mem010out);
    RAM4K(in=in, load=loadMem011, address=address[0..10], out=mem011out);
    RAM4K(in=in, load=loadMem100, address=address[0..10], out=mem100out);
    RAM4K(in=in, load=loadMem101, address=address[0..10], out=mem101out);
    RAM4K(in=in, load=loadMem110, address=address[0..10], out=mem110out);
    RAM4K(in=in, load=loadMem111, address=address[0..10], out=mem111out);

    Mux8Way16(
        sel=address[11..13],
        a=mem000out,
        b=mem001out,
        c=mem010out,
        d=mem011out,
        e=mem100out,
        f=mem101out,
        g=mem110out,
        h=mem111out,
        out=out
    );
}